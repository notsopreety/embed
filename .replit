entrypoint = "server.ts"

hidden = [".config", "bun.lock"]
modules = ["bun-1.2"]

[nix]
channel = "stable-24_11"

[deployment]
build = ["sh", "-c", "bun build --target=bun --outdir=dist server.ts"]
run = ["bun", "dist/server.js"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 5000
externalPort = 80

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "HLS Player Dev Server"

[[workflows.workflow]]
name = "HLS Player Dev Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bun run --watch server.ts"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"
